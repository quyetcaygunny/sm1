<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="SM_SU::blog" title="Blog">
                        <resource id="SM_SU::blogs_blogs" title="Posts" sortOrder="10">
                            <resource id="SM_SU::createblog" title="Manage Blog" sortOrder="10"/>
                            <resource id="SM_SU::deleteblog" title="Delete Blog" sortOrder="10"/>
                            <resource id="SM_SU::massupdateblog" title="Mass Update Blog" sortOrder="10"/>
                            <resource id="SM_SU::massdeleteblog" title="Mass Delete Blog" sortOrder="10"/>
                        </resource>
                        <resource id="SM_SU::blogs_categories" title="Categories" sortOrder="20"/>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="SM_SU::blog_settings" title="Smart Blog" sortOrder="1000"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
